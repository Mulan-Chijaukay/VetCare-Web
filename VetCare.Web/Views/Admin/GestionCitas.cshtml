@model IEnumerable<VetCare.Web.Models.Cita>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Gestión de Citas";
}

<div class="container-fluid py-4 px-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold" style="color: #2c3e50;">Citas Entrantes</h2>
        <span class="badge bg-primary rounded-pill px-3 py-2">Total: @Model.Count()</span>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-dark text-white">
                <tr>
                    <th class="ps-4">Mascota</th>
                    <th>Servicio</th>
                    <th>Horario</th>
                    <th>Veterinario</th>
                    <th>Estado</th>
                    <th class="pe-4 text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cita in Model)
                {
                    <tr>
                        <td class="ps-4 fw-bold">@cita.Mascota?.Nombre</td>
                        <td>@cita.Servicio</td>
                        <td>@cita.Fecha.ToShortDateString() <br><small class="text-muted">@cita.Horario</small></td>
                        <td>@(cita.NombreVeterinario ?? "Pendiente")</td>
                        <td>
                            <span class="badge rounded-pill @(cita.Estado == "Pendiente" ? "bg-warning text-dark" : "bg-success")">
                                @cita.Estado
                            </span>
                        </td>
                        <td class="pe-4 text-center">
                            <div class="d-flex justify-content-center gap-2">
                                @if (cita.Estado == "Pendiente")
                                {
                                    @* Botón Asignar corregido *@
                                    <button class="btn btn-sm btn-info text-white rounded-circle"
                                            onclick="abrirModalAsignar(@cita.Id)" title="Asignar Médico">
                                        <i class="bi bi-person-plus-fill"></i>
                                    </button>
                                }
                                @* Botón Eliminar con SweetAlert2 *@
                                <button type="button" class="btn btn-sm btn-outline-danger rounded-circle"
                                        onclick="confirmarEliminar(@cita.Id)" title="Eliminar Cita">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@* MODAL ASIGNAR *@
<div class="modal fade" id="modalAsignar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header border-0 p-4 pb-0">
                <h5 class="fw-bold">Asignar Médico Veterinario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="AsignarVeterinario" method="post">
                <div class="modal-body p-4">
                    <input type="hidden" name="citaId" id="citaIdInput" />
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Seleccionar Especialista</label>
                        <select name="veterinarioId" class="form-select bg-light border-0 p-3 rounded-3" asp-items="ViewBag.Veterinarios" required>
                            <option value="">-- Seleccione un médico --</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer border-0 p-4 pt-0">
                    <button type="submit" class="btn btn-primary w-100 fw-bold py-3 rounded-3 shadow-sm">Confirmar y Notificar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Función para abrir el modal manualmente y pasar el ID
        function abrirModalAsignar(id) {
            document.getElementById('citaIdInput').value = id;
            var modalElement = document.getElementById('modalAsignar');
            var instanciaModal = new bootstrap.Modal(modalElement);
            instanciaModal.show();
        }

        // Función para eliminación segura
        function confirmarEliminar(id) {
            Swal.fire({
                title: '¿Eliminar cita?',
                text: "Esta acción no se puede deshacer.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3e929a',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/Admin/EliminarCita/' + id;
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }
    </script>
}