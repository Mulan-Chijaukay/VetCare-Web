@model IEnumerable<VetCare.Web.Models.HistoriaClinica>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Seguimientos Pendientes";
}

<div class="container-fluid py-4 px-5">
    <div class="mb-4">
        <h2 class="fw-bold text-dark"><i class="bi bi-arrow-repeat text-warning me-2"></i>Pacientes por Volver</h2>
        <p class="text-muted">Lista de mascotas que el veterinario recomendó para una cita de control.</p>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="ps-4 py-3">Mascota</th>
                        <th>Dueño / Contacto</th>
                        <th>Fecha Sugerida</th>
                        <th>Último Diagnóstico</th>
                        <th class="pe-4 text-center">Acción</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-2 me-2">
                                        <i class="bi bi-pin-angle-fill"></i>
                                    </div>
                                    <span class="fw-bold">@item.Mascota?.Nombre</span>
                                </div>
                            </td>
                            <td>
                                <div class="fw-bold">@item.Mascota?.Usuario?.Nombre</div>
                                <div class="small text-muted"><i class="bi bi-telephone"></i> @item.Mascota?.Usuario?.PhoneNumber</div>
                            </td>
                            <td>
                                <span class="badge bg-info text-white px-3 py-2">
                                    @item.ProximaCitaSugerida?.ToString("dd/MM/yyyy")
                                </span>
                            </td>
                            <td>
                                <div class="text-truncate" style="max-width: 200px;" title="@item.Diagnostico">
                                    @item.Diagnostico
                                </div>
                            </td>
                            <td class="pe-4 text-center">
                                @* Este botón debe llevar al formulario de creación de cita del Admin *@
                                @* Reemplaza el botón antiguo por este *@
                                <a asp-action="PrepararCitaSeguimiento"
                                   asp-route-mascotaId="@item.MascotaId"
                                   asp-route-fechaSugerida="@item.ProximaCitaSugerida?.ToString("yyyy-MM-dd")"
                                   class="btn btn-warning btn-sm rounded-pill px-3 fw-bold shadow-sm">
                                    <i class="bi bi-calendar-check me-1"></i> AGENDAR AHORA
                                </a>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-emoji-smile fs-1 d-block mb-2"></i>
                                No hay seguimientos pendientes por ahora.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>