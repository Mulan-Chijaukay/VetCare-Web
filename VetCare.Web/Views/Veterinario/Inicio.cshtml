@model IEnumerable<VetCare.Web.Models.Cita>

@{
    Layout = "_LayoutVeterinario";
    ViewData["Title"] = "Agenda";
    DateTime fechaActual = ViewBag.FechaActual;
    string vista = ViewBag.Vista;
    var horasInicio = 8;
    var horasFin = 20;
    int salto = (vista == "Semana") ? 7 : 1;
    int alturaPorHora = 60;

    // Variable para comparar con hoy de forma estricta
    string hoyStr = DateTime.Today.ToString("yyyy-MM-dd");
}

<div class="container-fluid py-3">
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        @* Cabecera *@
        <div class="bg-white border-bottom p-3 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <div class="btn-group border rounded-3 me-3 shadow-sm bg-white">
                    <a asp-action="Inicio" asp-route-fecha="@fechaActual.AddDays(-salto).ToString("yyyy-MM-dd")" asp-route-vista="@vista" class="btn btn-light border-end px-3">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                    <a asp-action="Inicio" asp-route-fecha="@DateTime.Today.ToString("yyyy-MM-dd")" asp-route-vista="@vista" class="btn btn-light fw-bold px-3">Hoy</a>
                    <a asp-action="Inicio" asp-route-fecha="@fechaActual.AddDays(salto).ToString("yyyy-MM-dd")" asp-route-vista="@vista" class="btn btn-light border-start px-3">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
                <h4 class="fw-bold m-0 text-dark">
                    @if (vista == "Semana")
                    {
                        <span class="text-info text-uppercase fs-6 d-block" style="letter-spacing: 1px;">Semana del</span>
                        <span>@(((DateTime)ViewBag.InicioSemana).ToString("dd MMM")) - @(((DateTime)ViewBag.InicioSemana).AddDays(6).ToString("dd MMM yyyy"))</span>
                    }
                    else
                    {
                        <span class="text-info text-uppercase fs-6 d-block" style="letter-spacing: 1px;">Agenda del día</span>
                        <span>@fechaActual.ToString("dddd, dd MMMM yyyy")</span>
                    }
                </h4>
            </div>

            <div class="btn-group shadow-sm">
                <a asp-action="Inicio" asp-route-fecha="@fechaActual" asp-route-vista="Dia" class="btn btn-outline-info @(vista == "Dia" ? "active" : "") px-4">Día</a>
                <a asp-action="Inicio" asp-route-fecha="@fechaActual" asp-route-vista="Semana" class="btn btn-outline-info @(vista == "Semana" ? "active" : "") px-4">Semana</a>
            </div>
        </div>

        <div class="calendar-main bg-white">
            @* Grilla de horas y citas se mantiene igual hasta el bucle de citas... *@
            <div class="calendar-scroll-area position-relative" style="height: calc(100vh - 250px); overflow-y: auto;">
                <div class="d-flex">
                    <div class="time-column border-end bg-light" style="width: 70px; flex-shrink: 0;">
                        @for (int h = horasInicio; h <= horasFin; h++)
                        {
                            <div class="hour-cell border-bottom text-center text-muted d-flex align-items-center justify-content-center" style="height: @(alturaPorHora)px; font-size: 0.75rem;">
                                @(h > 12 ? (h - 12) + " PM" : h + (h == 12 ? " PM" : " AM"))
                            </div>
                        }
                    </div>

                    <div class="days-grid d-flex flex-grow-1 position-relative">
                        @for (int i = 0; i < (vista == "Semana" ? 7 : 1); i++)
                        {
                            var diaCol = (vista == "Semana") ? ((DateTime)ViewBag.InicioSemana).AddDays(i) : fechaActual;
                            string fechaColStr = diaCol.ToString("yyyy-MM-dd");

                            <div class="day-column border-end position-relative flex-grow-1" style="width: @(100 / (vista == "Semana" ? 7 : 1))%;">
                                @for (int h = horasInicio; h <= horasFin; h++)
                                {
                                    <div class="grid-line border-bottom" style="height: @(alturaPorHora)px;"></div>
                                }

                                @foreach (var cita in Model.Where(c => c.Fecha.Date == diaCol.Date))
                                {
                                    var hP = cita.Horario.Split(':');
                                    int hr = int.Parse(hP[0]);
                                    int m = int.Parse(hP[1].Split(' ')[0]);
                                    if (cita.Horario.Contains("PM") && hr != 12) hr += 12;
                                    var top = (hr - horasInicio) * alturaPorHora + (m * alturaPorHora / 60);
                                    string colorBorde = cita.Prioridad == "Alta" ? "#dc3545" : (cita.Prioridad == "Media" ? "#ffc107" : "#0dcaf0");

                                    <div class="appointment-card position-absolute rounded-3 shadow p-2 bg-dark text-white border-start border-4"
                                         style="top: @(top)px; left: 4px; right: 4px; height: @(alturaPorHora + 15)px; z-index: 10; border-color: @colorBorde !important;">

                                        <div class="d-flex flex-column justify-content-between h-100">
                                            <div class="text-truncate">
                                                <div class="fw-bold text-info" style="font-size: 0.8rem; color: @colorBorde !important;">@cita.Mascota?.Nombre</div>
                                                <div class="text-white-50" style="font-size: 0.65rem;">@cita.Horario</div>
                                            </div>

                                            @* VALIDACIÓN DE BOTÓN *@
                                            @if (cita.Estado == "Completada")
                                            {
                                                <span class="badge bg-success w-100" style="font-size: 0.6rem;">FINALIZADA</span>
                                            }
                                            else if (fechaColStr == hoyStr)
                                            {
                                                <button onclick="abrirAtencion(@cita.Id, '@cita.Mascota?.Nombre')"
                                                        class="btn btn-info btn-sm w-100 py-0 fw-bold"
                                                        style="font-size: 0.6rem; height: 18px; line-height: 1;">
                                                    ATENDER
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary w-100 opacity-50" style="font-size: 0.6rem;">NO DISPONIBLE</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@* MODAL DE ATENCIÓN *@
<div class="modal fade" id="modalAtencion" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-white border-0 shadow-lg rounded-4">
            <div class="modal-header border-secondary border-opacity-25">
                <h5 class="modal-title fw-bold text-info">
                    <i class="bi bi-stethoscope me-2"></i> Atender a <span id="nombreMascotaModal"></span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="FinalizarConsulta" method="post">
                <div class="modal-body p-4">
                    <input type="hidden" name="citaId" id="citaIdModal" />
                    <div class="mb-3">
                        <label class="form-label text-white-50 small fw-bold text-uppercase">Diagnóstico Médico</label>
                        <textarea name="diagnostico" class="form-control bg-secondary bg-opacity-10 border-secondary text-white rounded-3" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-white-50 small fw-bold text-uppercase">Tratamiento / Receta</label>
                        <textarea name="tratamiento" class="form-control bg-secondary bg-opacity-10 border-secondary text-white rounded-3" rows="2"></textarea>
                    </div>

                    @* CAMPO DE FECHA CORREGIDO *@
                    <div class="mb-3 p-3 rounded-3" style="background: rgba(255,255,255,0.05);">
                        <label class="form-label text-info small fw-bold text-uppercase">
                            <i class="bi bi-calendar-plus me-1"></i> Sugerir Cita de Seguimiento
                        </label>
                        <input type="date"
                               name="proximaCitaSugerida"
                               id="proximaCitaSugerida"
                               class="form-control bg-dark border-secondary text-white shadow-none"
                               style="cursor: pointer;"
                               onclick="this.showPicker();"
                               min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    </div>
                </div>
                <div class="modal-footer border-0 pb-4 px-4">
                    <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-info rounded-pill px-4 fw-bold shadow">Guardar y Finalizar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .calendar-scroll-area::-webkit-scrollbar {
            width: 6px;
        }

        .calendar-scroll-area::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 10px;
        }

        .appointment-card {
            transition: 0.2s;
            overflow: hidden;
        }

            .appointment-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.4) !important;
                background: #212529 !important;
            }

        .pulse-effect {
            animation: pulse-red 2s infinite;
        }

        @@keyframes pulse-red {
            0% {
                opacity: 0.7;
            }

            50% {
                opacity: 1;
                transform: scale(1.2);
            }

            100% {
                opacity: 0.7;
            }
        }
    </style>
}



    @section Scripts {
    <script>
        function abrirAtencion(id, nombre) {
            document.getElementById('citaIdModal').value = id;
            document.getElementById('nombreMascotaModal').innerText = nombre;
            var myModal = new bootstrap.Modal(document.getElementById('modalAtencion'), { focus: false });
            myModal.show();
        }

        document.addEventListener("DOMContentLoaded", function() {
            @if (TempData["Mensaje"] != null)
            {
                    <text>
                    Swal.fire({ icon: 'success', title: '¡Éxito!', html: '@Html.Raw(TempData["Mensaje"])', confirmButtonColor: '#2c8a93' });
                    </text>
            }
        });
    </script>
}
