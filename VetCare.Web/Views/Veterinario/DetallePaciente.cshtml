@model VetCare.Web.Models.Mascota

@{
    Layout = "_LayoutVeterinario";
    ViewData["Title"] = "Expediente de " + Model.Nombre;
}

<div class="container py-4">
    <div class="card border-0 shadow-sm rounded-4 bg-dark text-white mb-4">
        <div class="card-body p-4">
            <div class="d-flex align-items-center">
                <div class="bg-info rounded-circle d-flex align-items-center justify-content-center shadow" style="width: 80px; height: 80px;">
                    <i class="bi bi-dog-fill fs-1 text-white"></i>
                </div>
                <div class="ms-4">
                    <h2 class="fw-bold m-0">@Model.Nombre</h2>
                    <p class="text-info mb-0 small text-uppercase fw-bold">Dueño: @Model.Usuario?.Nombre</p>
                    <span class="badge bg-white bg-opacity-10 mt-2">@Model.Especie / @Model.Raza</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-body">
                    <h5 class="fw-bold mb-3 border-bottom pb-2">Datos Generales</h5>
                    <ul class="list-unstyled small">
                        <li class="mb-2 text-muted"><i class="bi bi-calendar-event me-2"></i><strong>Edad:</strong> @Model.Edad años</li>
                        <li class="mb-2 text-muted"><i class="bi bi-gender-ambiguous me-2"></i><strong>Sexo:</strong> @Model.Sexo</li>
                        <li class="mb-2 text-muted"><i class="bi bi-telephone me-2"></i><strong>Contacto:</strong> @Model.Usuario?.PhoneNumber</li>
                    </ul>
                    <hr>
                    <div class="d-grid">
                        @* Actualizado para llamar a tu función de JS *@
                        <button class="btn btn-info rounded-pill btn-sm text-white fw-bold shadow-sm" onclick="imprimirReceta()">
                            <i class="bi bi-printer me-2"></i>Imprimir Expediente
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <h5 class="fw-bold mb-4">Evolución Clínica</h5>

            <div class="medical-timeline">
                @if (Model.HistoriasClinicas != null && Model.HistoriasClinicas.Any())
                {
                    @foreach (var historia in Model.HistoriasClinicas)
                    {
                        <div class="timeline-event position-relative ps-4 pb-4 border-start border-2 border-info border-opacity-25 ms-3">
                            <div class="dot position-absolute start-0 translate-middle bg-info rounded-circle" style="width: 12px; height: 12px; margin-left: -1px;"></div>

                            <div class="card border-0 shadow-sm rounded-3">
                                <div class="card-header bg-white border-0 py-2 d-flex justify-content-between align-items-center">
                                    <span class="fw-bold text-dark small text-uppercase">@historia.FechaAtencion.ToString("dd MMMM, yyyy")</span>
                                    <span class="badge bg-light text-dark border fw-normal" style="font-size: 0.7rem;">Cita #@historia.CitaId</span>
                                </div>
                                <div class="card-body pt-0">
                                    <p class="mb-2"><strong>Diagnóstico:</strong><br><span class="text-muted">@historia.Diagnostico</span></p>
                                    <div class="p-2 bg-info bg-opacity-10 rounded-2">
                                        <p class="mb-0 small"><strong>Tratamiento:</strong><br>@historia.Tratamiento</p>
                                    </div>
                                    <div class="mt-2 text-end border-top pt-1">
                                        <small class="text-muted italic" style="font-size: 0.7rem;">Atendido por: @historia.VeterinarioNombre</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-light border text-center py-5 rounded-4">
                        <i class="bi bi-folder2-open fs-1 text-muted d-block mb-3"></i>
                        No hay registros médicos para esta mascota.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .timeline-event:last-child {
            border-start-color: transparent !important;
        }

        .medical-timeline {
            padding-top: 10px;
        }

        .timeline-event .card {
            transition: transform 0.2s;
        }

            .timeline-event .card:hover {
                transform: translateX(5px);
            }

        @@media print {
            nav, aside, button, .btn, footer, .navbar, .no-print {
                display: none !important;
            }

            .container, .col-md-8, .col-md-4 {
                width: 100% !important;
                max-width: 100% !important;
                flex: 0 0 100% !important;
                margin: 0 !important;
                padding: 0 !important;
            }

            .card {
                border: 1px solid #ddd !important;
                break-inside: avoid;
                margin-bottom: 20px !important;
            }

            .bg-dark {
                background-color: #000 !important;
                color: #fff !important;
                -webkit-print-color-adjust: exact;
            }

            .bg-info {
                background-color: #2c8a93 !important;
                -webkit-print-color-adjust: exact;
            }

            .text-white {
                color: #fff !important;
            }
        }
    </style>
}

@section Scripts {
    <script>
        function imprimirReceta() {
            window.print();
        }
    </script>
}