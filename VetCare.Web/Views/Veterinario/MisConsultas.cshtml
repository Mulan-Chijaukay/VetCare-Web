@model IEnumerable<VetCare.Web.Models.HistoriaClinica>
@{
    Layout = "_LayoutVeterinario";
    ViewData["Title"] = "Mis Consultas Finalizadas";
}

<div class="container-fluid py-4 px-5">
    <div class="mb-4">
        <h2 class="fw-bold"><i class="bi bi-check2-circle text-success me-2"></i>Mis Consultas</h2>
        <p class="text-muted">Listado de pacientes atendidos recientemente por usted.</p>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-dark text-white">
                <tr>
                    <th class="ps-4">Fecha</th>
                    <th>Paciente</th>
                    <th>Dueño</th>
                    <th>Diagnóstico</th>
                    <th class="pe-4 text-center">Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4">
                            @item.FechaAtencion.ToString("dd/MM/yyyy") <br />
                            <small class="text-muted">@item.FechaAtencion.ToString("hh:mm tt")</small>
                        </td>
                        <td class="fw-bold">@item.Mascota?.Nombre</td>
                        <td>@item.Mascota?.Usuario?.Nombre</td>
                        <td class="text-truncate" style="max-width: 250px;">@item.Diagnostico</td>
                        <td class="pe-4 text-center">
                            <a asp-action="DetallePaciente" asp-route-id="@item.MascotaId"
                               class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                <i class="bi bi-eye"></i> Ver Ficha
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>