


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VetCare - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm" style="background-color: #3e929a; padding: 10px 40px; border-bottom: 2px solid rgba(0,0,0,0.05);">
            <div class="container-fluid p-0">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logovetcare.png" alt="VetCare Logo" style="height: 100px; width: auto; object-fit: contain;">
                </a>

                <div class="d-flex flex-grow-1 ms-4">
                    <h1 class="text-white m-0 fw-bold" style="font-size: 2.5rem; letter-spacing: -1px;">Descubre con nosotros</h1>
                </div>

                <div class="navbar-nav align-items-center gap-3">
                    <a class="btn-nav-figma" href="#">Quiénes somos</a>
                    <a class="btn-nav-figma" href="#">Ofertas actuales</a>
                    <a class="btn btn-naranja-figma px-4" asp-controller="Account" asp-action="Index">Iniciar sesion</a>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>