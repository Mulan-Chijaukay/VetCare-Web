<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VetCare Admin</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        /* Estilo para resaltar el botón de seguimiento */
        .nav-admin-link i.text-warning {
            color: #ffc107 !important;
        }

        /* Animación para alertas en el dashboard */
        @@keyframes pulse-red {
            0% {
                transform: scale(0.95);
                opacity: 0.8;
            }

            50% {
                transform: scale(1.05);
                opacity: 1;
            }

            100% {
                transform: scale(0.95);
                opacity: 0.8;
            }
        }

        .pulse-warning {
            animation: pulse-red 2s infinite;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="admin-container">
        <nav id="sidebar">
            <div class="p-4 border-bottom border-secondary mb-3">
                <h4 class="fw-bold m-0 text-white d-flex align-items-center">
                    <i class="bi bi-shield-plus me-2 text-info"></i>
                    <span class="nav-text">VetCare</span>
                </h4>
            </div>

            <div class="flex-grow-1 nav flex-column">
                <a asp-controller="Admin" asp-action="Dashboard" class="nav-admin-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                    <i class="bi bi-grid-fill me-3"></i>
                    <span class="nav-text">Resumen</span>
                </a>

                <a asp-controller="Admin" asp-action="GestionCitas" class="nav-admin-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "GestionCitas" ? "active" : "")">
                    <i class="bi bi-calendar-check-fill me-3"></i>
                    <span class="nav-text">Citas Clientes</span>
                </a>

                @* NUEVO: Conexión al módulo de Seguimientos *@
                <a asp-controller="Admin" asp-action="PacientesPorVolver" class="nav-admin-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "PacientesPorVolver" ? "active" : "")">
                    <i class="bi bi-arrow-repeat me-3 text-warning"></i>
                    <span class="nav-text">Pacientes por Volver</span>
                </a>

                <a asp-controller="Admin" asp-action="ListaVeterinarios" class="nav-admin-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "ListaVeterinarios" ? "active" : "")">
                    <i class="bi bi-person-badge-fill me-3"></i>
                    <span class="nav-text">Veterinarios</span>
                </a>
            </div>

            <div class="sidebar-footer">
                <form asp-controller="Account" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-logout border-0 bg-transparent text-start w-100 d-flex align-items-center">
                        <i class="bi bi-box-arrow-left me-3 fs-5"></i>
                        <span class="nav-text">Cerrar Sesión</span>
                    </button>
                </form>
            </div>
        </nav>

        <div class="d-flex flex-column w-100">
            <header class="premium-header">
                <div class="d-flex align-items-center">
                    <button id="toggleBtn" class="btn btn-dark border-0 shadow-sm me-4">
                        <i class="bi bi-list fs-4"></i>
                    </button>
                    <h5 class="fw-bold text-dark m-0">@ViewData["Title"]</h5>
                </div>

                <div class="user-profile d-flex align-items-center bg-white border rounded-pill px-3 py-1 shadow-sm">
                    <div class="me-3 text-end d-none d-sm-block">
                        <p class="m-0 small fw-bold text-dark">@User.Identity.Name</p>
                        <span class="badge bg-primary-subtle text-primary border border-primary-subtle" style="font-size: 0.65rem;">ADMINISTRADOR</span>
                    </div>
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 40px; height: 40px;">
                        <i class="bi bi-person-fill fs-5"></i>
                    </div>
                </div>
            </header>

            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin-actions.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>