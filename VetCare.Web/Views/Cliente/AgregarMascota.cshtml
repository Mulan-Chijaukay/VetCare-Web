@{
    Layout = "_LayoutCliente";
    ViewData["Title"] = "Registro de mascota";
}

@section Styles {
    <link rel="stylesheet" href="~/css/registro-mascota.css" asp-append-version="true" />
}

<div class="full-split-wrapper">
    <div class="expert-image-side d-none d-lg-flex">
        <img src="~/img/registromascota.jpg" alt="Vinculo Mascota">
        <div class="expert-image-overlay">
            <h1 class="display-3 fw-bold mb-2">Un nuevo integrante?</h1>
            <p class="fs-4 fw-light opacity-90">Registralo para darle el cuidado que merece.</p>
        </div>
    </div>

    <div class="expert-form-side">
        <div class="form-header-group">
            <h2 class="title-vetcare mb-3">Registro de Mascota</h2>
            <p class="text-muted fs-5">Completa los datos de tu compañero en nuestro sistema privado.</p>
        </div>

        <div style="width: 100%; max-width: 420px;">
            <form asp-action="RegistrarMascota" method="post">
                <div class="mb-4">
                    <label class="label-custom">Nombre del mejor amigo</label>
                    <input type="text" name="Nombre" class="form-control input-premium" placeholder="Ej: Hachiko" required />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label class="label-custom">Especie</label>
                        <select name="Especie" class="form-select input-premium" required>
                            <option value="Perro">Perro</option>
                            <option value="Gato">Gato</option>
                            <option value="Conejo">Conejo</option>
                            <option value="Hamster">Hamster</option>
                            <option value="Loro">Loro</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label class="label-custom">Raza / Variedad</label>
                        <input type="text" name="Raza" class="form-control input-premium" placeholder="Ej: Beagle" />
                    </div>
                </div>

                <div class="d-grid gap-3 mt-4">
                    <button type="submit" class="btn btn-finalizar-expert">
                        FINALIZAR REGISTRO
                    </button>

                    <div class="text-center mt-3">
                        <a href="/Cliente/Inicio" class="btn-volver-panel">
                            Volver al panel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>